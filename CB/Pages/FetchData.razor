@page "/fetchdata"

<PageTitle>Weather forecast</PageTitle>

@using CB.Data

<h1>Website report checker</h1>

@if (GetList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        </thead>
        <tbody>
            <div>
                <input type="text" @bind="api.Domain" placeholder="google.com" />
                <input type="text" @bind="api.Days" placeholder="90" />
                <button class="btn btn-outline-light" @onclick="Search">Add</button>
            </div>
            @foreach (API get in GetList)
            {
                <tr>
                    <td>@get.</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    API api = new();
    List<API> GetList = Fetch.ApiReq(api);

    void Search()
    {
        GetList.Add(api);
        api = new();
    }
}
