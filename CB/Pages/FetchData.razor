@page "/fetchdata"

<PageTitle>Weather forecast</PageTitle>

@using CB.Data

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from a service.</p>

@if (GetList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Website</th>
                <th>Temp. (C)</th>
                <th>Temp. (F)</th>
                <th>Summary</th>
            </tr>
        </thead>
        <tbody>
            @foreach (dynamic get in GetList)
            {
                <tr>
                    <td>@get</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private WeatherForecast[]? forecasts;
    List<dynamic> GetList = API.FetchRequest();
}
